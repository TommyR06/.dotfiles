# key bindings
# some of these are default and are only a reminder
map [normal]        f       follow
map [fullscreen]    f       follow

map [normal]        <C-f>   toggle_fullscreen
map [fullscreen]    <C-f>   toggle_fullscreen

map [normal]        i       toggle_index
map [fullscreen]    i       toggle_index

map [normal]        r       rotate rotate-cw
map [fullscreen]    r       rotate rotate-cw

map [normal]        <C-r>   recolor
map [fullscreen]    <C-r>   recolor

map [normal]        <S-r>   reload
map [fullscreen]    <S-r>   reload

map [normal]        p       print
map [fullscreen]    p       print

map [normal]        <S-j>   navigate next
map [fullscreen]    <S-j>   navigate next

map [normal]        <S-k>   navigate previous
map [fullscreen]    <S-k>   navigate previous

#map [normal]        <S-l>   jumplist forward
#map [fullscreen]    <S-l>   jumplist forward

#map [normal]        <S-h>   jumplist backward
#map [fullscreen]    <S-h>   jumplist backward

map [normal]        q       quit 
map [fullscreen]    q       quit 
map [index]         q       quit 

map [normal]        a       adjust_window best-fit
map [fullscreen]    a       adjust_window best-fit

map [normal]        s       adjust_window width
map [fullscreen]    s       adjust_window width

map [normal]        d       toggle_page_mode 2
map [fullscreen]    d       toggle_page_mode 2

